= turbo_frame_tag image_request do
  %h2.text-6xl.font-extrabold.dark:text-black.mb-3
    = link_to image_request_path(image_request), data: {"turbo-frame": "_top"} do
      = image_request.prompt
      %small.text-base.ml-2.font-semibold.text-gray-500.dark:text-gray-400= image_request.size
  = button_to image_request_images_path(image_request), data: { 'turbo-action': "replace" },  method: :post do
    Generate
  .container.mb-4
    .flex.flex-wrap.-m-1.md:-m-2
      = render partial: 'image_requests/image', collection: image_request.images


