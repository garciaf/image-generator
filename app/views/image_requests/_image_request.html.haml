= turbo_frame_tag image_request do
  %h2.text-6xl.font-extrabold.dark:text-black.mb-3
    = link_to image_request_path(image_request), data: {"turbo-frame": "_top"} do
      = image_request.prompt
      %small.text-base.ml-2.font-semibold.text-gray-500.dark:text-gray-400= image_request.size
  .my-4
    = button_to image_request_images_path(image_request), method: :post, form: { class: "inline" } do
      %svg.h-6.w-6.text-black.inline.mr-2{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
        %path{d: "M9 12.75l3 3m0 0l3-3m-3 3v-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
    = button_to image_request_path(image_request), method: :delete, data: { turbo: { method: :delete } }, form: { class: "inline" }  do
      %svg.h-6.w-6.text-black.inline{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
        %path{d: "M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}

  .container.mb-4
    .flex.flex-wrap.-m-1.md:-m-2
      = render partial: 'image_requests/image', collection: image_request.images


